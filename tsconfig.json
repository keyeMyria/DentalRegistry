  "compilerOptions": {
    "baseUrl": "./src/",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "src/*": ["./src/*"]
    },
    "target": "es6",
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
